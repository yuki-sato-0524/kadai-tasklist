<!-- 共通フォーム　-->
<%= form_for(@task) do |f| %>
  
  <% if task.errors.any? %>
   <div class="error_explanation" >
     <ul>
      <% task.errors.ful_messages.each do |task| %>
      
      <li><%= task %></li>
      <% end %>
     </ul>
    </div>
  <% end %>
  
  <%= f.label :content, "タスク" %>
  <%= f.text_field :content %>
  
  <%= f.label :status, "状況" %>
  <%= f.text_field :status %>
  
  <%= f.submit "登録" %>
<% end %>