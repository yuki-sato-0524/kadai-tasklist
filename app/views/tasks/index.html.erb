<div class="container">
<h1>登録タスク一覧</h1>
<% if @tasks.any? %>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>id</th>
        <th>タスク</th>
        <th>状況</th>
      </tr>
      
    </thead>
    <tbody>
      <% @tasks.each do |task|%>
        <tr>
          <th><%= link_to task.id, task %></th>
          <th><%= task.content %></th>
          <th><%= task.status %></th>
        </tr>
      <% end %>
      
    </tbody>
  </table>
  
  <div>
    <%= paginate @tasks %>
  </div>
  
<% end %>

<%= link_to "新規タスクの登録", new_task_path, class: "btn btn-primary" %>
</div>