<% if logged_in? %>

<div class="row">
  <aside class="col-xs-4">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= current_user.name %></h3>
      </div>
      <div class="panel-body">
        <img class="media-object img-rounded img-responsive" src="<%= gravatar_url(current_user, { size: 500 }) %>" alt="">
      </div>
    </div>
  </aside>
  
<div class="col-xs-8">
  <h1>登録タスク一覧</h1>
  <% if @tasks.any? %>
  
    <table class="table table-striped">
      <thead>
        <tr>
          <th>タスク</th>
          <th>状況</th>
        </tr>
        
      </thead>
      <tbody>
        <% @tasks.each do |task|%>
          <tr>
            <th><%= link_to task.content, task %></th>
            <th><%= task.status %></th>
          </tr>
        <% end %>
        
      </tbody>
    </table>
    
    <div>
      <%= paginate @tasks %>
    </div>
    
  <% end %>
  
  <%= link_to "新規タスクの登録", new_task_path, class: "btn btn-primary" %>
  </div>
</div>
<% else %>
  <div class="center jumbotron">
    <div class="text-center">
      <h1>Welcome to the TASK!!!</h1>
      <%= link_to 'Sign up now!', signup_path, class: 'btn btn-lg btn-primary' %>
    </div>
  </div>


<% end %>